{
  "RabbitMq": {
    "connstr": "amqp://guest:guest@rabbitmq:5672",
    "Username": "guest",
    "Password": "guest",
    "ServerAddress": "rabbitmq://rabbitmq",
    "DelayedRedeliverySeconds": 10
  },
  "MongoDb": {
    "Connection": "mongodb://root:example@mongo:27017",
    "DatabaseName": "salesdb",
    "CollectionName": {
      "Books": "books"
    }
  },
  "Endpoint": {
    "NewBookConsumer": "sales-new-book-event",
    "ConfirmationConsumer": "sales-confirmation-event"
  },
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://0.0.0.0:80"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "ElasticConfiguration": {
    "Uri": "http://elasticsearch:9200"
  },
  "AllowedHosts": "*"
}
